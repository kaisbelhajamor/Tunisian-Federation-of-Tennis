{% extends 'FttBackofficeBundle::accueil_admin.html.twig' %}
{% block breadcrumb %}
    {{ parent() }}

    <li class="active">modifier Actualite</li>
{% endblock %}
{% block content %}





    <div class="box box-info ">
        <div class="box-header with-border">
            <h3 class="box-title">Modifier actualite</h3>
        </div><!-- /.box-header -->


        {% for flashMessage in app.session.flashbag.get('SuccessAddActualite') %}
            <div class="alert alert-success fade in">
                <a href="#" class="close" data-dismiss="alert">&times;</a>

                <strong>Succés!</strong> {{ flashMessage }}
            </div>
        {% endfor %}


        <!-- form start -->
        {{ form_start(form,{ 'attr': {'class': 'form-horizontal'} })}}
        <div class="box-body">

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Titre*</label>

                <div class="col-sm-3">
                    {{ form_widget(form.titre, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                </div>
            </div>



            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Description*</label>

                <div class="col-sm-3">
                    {{ form_widget(form.description, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                </div>
            </div>





            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Categorie*</label>

                <div class="col-sm-3">
                    {{ form_widget(form.categorie, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                </div>
            </div>


            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Télecharger photo*</label>
                <div class="col-sm-3">
                    {{ form_widget(form.file, { 'attr': {'class': 'form-control', 'id': 'inputPassword3'} }) }}
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Tags*</label>

                <div class="col-sm-3">
                    {{ form_widget(form.tags, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                </div>
            </div>
        </div><!-- /.box-body -->
        <div class="box-footer">
            {{ form_widget(form.Ajouter, { 'attr': {'class': 'btn btn-info pull-left', 'id': 'inputPassword3'} }) }}
            <a class="btn btn-info pull-right" href="{{ path('ftt_gestion_actualite_admin_list') }}">
                Retourner
            </a>
        </div><!-- /.box-footer -->
        {{ form_end(form) }}
    </div>


{% endblock %}

