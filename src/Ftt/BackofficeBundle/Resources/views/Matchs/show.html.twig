{% extends "FttBackofficeBundle::accueil_admin.html.twig" %}

{% block content %}
    <h1>Matchs</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Typematch</th>
                <td>{{ entity.typeMatch }}</td>
            </tr>
            <tr>
                <th>Tournoi</th>
                <td>{{ entity.tournoi }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ entity.heure }}</td>
            </tr>
            <tr>
                <th>Resultat</th>
                <td>{{ entity.resultat }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('matchs') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('matchs_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
 
</ul>
{% endblock %}
