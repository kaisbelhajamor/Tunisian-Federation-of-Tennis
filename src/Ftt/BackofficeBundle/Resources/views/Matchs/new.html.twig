{% extends "FttBackofficeBundle::accueil_admin.html.twig" %}

{% block content %}
  <div class="col-md-8">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Ajouter un match </h3>
            {{ form_start(form)}}
        </div>
        <div class="form-horizontal"> <div class="box-body">

           <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Type de match: </label>

                        <div class="col-sm-10">
                            {{ form_widget(form.typeMatch, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Tournoi:  </label>

                        <div class="col-sm-10">
                            {{ form_widget(form.tournoi, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>
                    </div>



                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Terrain:</label>

                        <div class="col-sm-10">
                            {{ form_widget(form.Terrain, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Date: </label>

                        <div class="col-sm-10">
                            {{ form_widget(form.date, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Heure: </label>

                        <div class="col-sm-10">
                            {{ form_widget(form.heure, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>
                    </div>    

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Resultat: </label>

                        <div class="col-sm-10">
                            {{ form_widget(form.resultat, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Joueur 1: </label>

                        <div class="col-sm-10">
                            {{ form_widget(form.joueur1, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>
                    </div>    
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Joueur 2: </label>

                        <div class="col-sm-10">
                            {{ form_widget(form.joueur2, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>
                    </div>  

        </div><!-- /.box-body -->
        </div>
       
        <div class="box-footer">
            {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-info pull-right', 'id': 'inputPassword3'} }) }}
        <a class="btn btn-info" href="{{ path('matchs') }}"> Retour a la liste </a> 
        </div>

        {{ form_end(form) }}

    </div>
</div>
  
{% endblock %}
