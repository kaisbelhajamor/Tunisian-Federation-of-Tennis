{% extends "FttBackofficeBundle::accueil_admin.html.twig" %}

{% block body %}
 
    <h1>Paris creation</h1>

    {{ form(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('paris_affich') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}


{% block content %}
  
    <center>  <h1>Ajouter Paris</h1></center>
<br>
   {{ form_start(form) }}
   <div class="panel panel-default">
       <label for="inputEmail3" class="col-sm-2 control-label"> Cote1 </label>
                    <div class="col-sm-10">
                        {{ form_widget(form.cote1,
                        { 'id': 'inputEmail3',  'attr': { 'class' : 'form-control' }} ) }}
                    </div>
 
    <label for="inputEmail3" class="col-sm-2 control-label">Cote2 </label>
                    <div class="col-sm-10">
                        {{ form_widget(form.cote2,
                        { 'id': 'inputEmail3',  'attr': { 'class' : 'form-control' }} ) }}
                    </div>
     <label for="inputEmail3" class="col-sm-2 control-label">Date du match </label>
                    <div class="col-sm-10">
                        {{ form_widget(form.date,
                        { 'id': '',  'attr': { 'class' : 'form-group' }} ) }}
                    </div>  
                    
                    <label for="inputEmail3" class="col-sm-2 control-label">Match </label>
                    <div class="col-sm-10">
                        {{ form_widget(form.matchs,
                        { 'id': '',  'attr': { 'class' : 'form-group' }} ) }}
                    </div>  
                    
                    <div class="col-sm-10">
                 <center>        {{ form_widget(form.submit,
                       { 'id': '',  'attr': { 'class' : 'btn btn-success' }} ) }}</center>
                    </div>  

          

   {{ form_end(form) }}
    </div>
    <a href="{{ path('paris_affich') }}" class="btn btn-primary" role="button">
            <center>  Retour</center>
        </a>
   
   

{% endblock %}
