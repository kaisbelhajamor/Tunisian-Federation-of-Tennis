{% extends "FttBackofficeBundle::accueil_admin.html.twig" %}

{% block content %}

    <div class="col-md-8">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Creation d'une nouvelle formation</h3>
                {{ form_start(form)}}
            </div>
            <div class="form-horizontal"><div class="box-body">

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Nom: </label>

                        <div class="col-sm-10">
                            {{ form_widget(form.nom, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Description: </label>

                        <div class="col-sm-10">
                            {{ form_widget(form.description, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Lieux: </label>

                        <div class="col-sm-10">
                            {{ form_widget(form.lieux, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Date d'ouverture: </label>

                        <div class="col-sm-10">
                            {{ form_widget(form.dateOuverture, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Date de cloture: </label>

                        <div class="col-sm-10">
                            {{ form_widget(form.dateCloture, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Cible: </label>

                        <div class="col-sm-10">
                            {{ form_widget(form.cible, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>

                    </div>
                </div>
            </div>

            <div class="box-footer">
                {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-info pull-right', 'id': 'inputPassword3'} }) }}
                <a href="{{ path('formation') }}" class="btn btn-info" >Retour a la liste</a> 
            </div>

            {{ form_end(form) }} 


        </div>
    </div>      









{% endblock %}

