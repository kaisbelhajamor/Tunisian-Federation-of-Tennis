{% extends "FttBackofficeBundle::accueil_admin.html.twig" %}

{% block content %}
    <div class="col-md-8">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Modifier Terrain</h3>
                {{ form_start(edit_form)}}
            </div>
            <div class="form-horizontal">
                <div class="box-body">

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Nom du terrain: </label>

                        <div class="col-sm-10">
                            {{ form_widget(edit_form.nomTerrain, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Adresse du Terrain:  </label>

                        <div class="col-sm-10">
                            {{ form_widget(edit_form.adresseTerrain, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>
                    </div>



                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label"> Capacite:</label>

                        <div class="col-sm-10">
                            {{ form_widget(edit_form.capacite, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                        </div>
                    </div>

                </div>
            </div>
            <div class="box-footer">
                <div class="form-group">
                    {{ form_widget(edit_form.submit, { 'attr': {'class': 'btn btn-info', 'id': 'inputPassword3'} }) }}
                    {{ form_end(edit_form) }}



                    <a href="{{ path('terrain') }}" class="btn btn-info pull-right" >Retour a la liste </a> 
                </div>


            </div>

        </div>


    </div>
{% endblock %}
