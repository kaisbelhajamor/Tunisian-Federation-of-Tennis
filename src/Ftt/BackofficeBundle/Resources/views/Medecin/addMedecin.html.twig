{% extends 'FttBackofficeBundle::accueil_admin.html.twig' %}
{% block breadcrumb %}
    {{ parent() }}

    <li class="active">Ajouter Medecin</li>
{% endblock %}
{% block content %}

    {% for flashMessage in app.session.flashbag.get('SuccessAddMedecin') %}
        <div class="alert alert-success fade in">
            <a href="#" class="close" data-dismiss="alert">&times;</a>

            <strong>Succ√©s!</strong> {{ flashMessage }}
        </div>
    {% endfor %}



    <div class="box box-info ">
        <div class="box-header with-border">
            <h3 class="box-title">Ajouter un Medecin</h3>
        </div><!-- /.box-header -->





        <!-- form start -->
        {{ form_start(form,{ 'attr': {'class': 'form-horizontal'} })}}
        <div class="box-body">

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Nom*</label>

                <div class="col-sm-3">
                    {{ form_widget(form.nom, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                </div>
            </div>



            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Prenom*</label>

                <div class="col-sm-3">
                    {{ form_widget(form.prenom, { 'attr': {'class': 'form-control', 'id': 'inputEmail3'} }) }}
                </div>
            </div>

        </div><!-- /.box-body -->
        <div class="box-footer">
            {{ form_widget(form.Ajouter, { 'attr': {'class': 'btn btn-info pull-left', 'id': 'inputPassword3'} }) }}
            <a class="btn btn-info pull-right" href="{{ path('ftt_backoffice_medecin_list') }}">
                Retourner
            </a>
        </div><!-- /.box-footer -->
        {{ form_end(form) }}
    </div>


{% endblock %}

