                         <li><img src="{{ asset(actu.getWebPath()) }}" alt="" /><p>{{ actu.description|length > 40 ? actu.description|slice(0, 40) ~ '...' : actu.description  }}</p></li>
                        {% endfor%}
                </ul>
            </div>
            {% block newsletter %}
                <div class="col-md-3 footer-newsletters">


                </div>
            {% endblock  %}
